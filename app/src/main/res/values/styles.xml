<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
    </style>

    <style name="EditTextWithBorder" parent="AppTheme">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="BotonLogin" parent="AppTheme">
        <item name="android:background">#cf3638</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Estilo para barra de navegacion azul -->
    <style name="CustomActionBarTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#3178b6</item>
    </style>

    <!-- Swipe Style -->
    <style name="MyListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#f6f6f6</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="MyListFrontContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="BotonAusente" parent="AppTheme">
        <item name="android:background">#ce3737</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="BotonRestablecer" parent="AppTheme">
        <item name="android:background">#656464</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="MyListImage">
        <item name="android:layout_width">17dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="MyListTitle">
        <item name="android:scaleGravity">center_vertical</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#3179B6</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">5</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>


</resources>
